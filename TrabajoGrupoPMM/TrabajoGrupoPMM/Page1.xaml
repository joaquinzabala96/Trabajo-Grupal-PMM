<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrabajoGrupoPMM.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Usuario"  
                 FontSize="Large"  
                 HorizontalOptions="Center"  
                 VerticalOptions="Center"/>
            <Entry x:Name="user" Placeholder="user"></Entry> 
            <Label Text="Contraseña"  
                 FontSize="Large"  
                 HorizontalOptions="Center"  
                 VerticalOptions="Center"/>
            <Entry IsPassword="True" x:Name="password" Placeholder="password"></Entry>
            <Button Text = "Done"
                         HorizontalOptions ="End"
                         TextColor="Green"
                         Clicked = "OnButtonClickedDone" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>